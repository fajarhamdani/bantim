<%= form_with(model: desa) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title" id="ModalLongTitle"><%= desa.id.nil? ? 'Tambah' : 'Ubah' %> Desa</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <% if desa.errors.any? %>
      <div id="error_explanation" class="alert-danger">
        <ul>
          <% desa.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Nama Desa' %>
    </div><br/>
    <div class="field">
      <%= form.text_field :abr, class: 'form-control', placeholder: 'Singkatan' %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="setNewDesa();">Close</button>
    <%= form.submit 'Simpan', class: 'btn btn-primary' %>
  </div>
<% end %>