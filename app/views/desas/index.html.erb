<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<p id="notice"><%= notice %></p>

<h1>Desas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desas.each do |desa| %>
      <tr>
        <td><%= desa.name %></td>
        <td><%= link_to 'Show', desa %></td>
        <td><%= link_to 'Edit', edit_desa_path(desa) %></td>
        <td><%= link_to 'Destroy', desa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Desa', new_desa_path %>
