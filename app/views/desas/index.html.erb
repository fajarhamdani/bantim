<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <% @desas.each_with_index do |desa, index| %>
    <li class="nav-item" role="presentation">
      <a class="nav-link <%= index.zero? ? 'active' : '' %>" id="pills-<%= desa.slug %>-tab" data-toggle="pill" href="#pills-<%= desa.slug %>" role="tab" aria-controls="pills-home" aria-selected="true"><%= desa.name %></a>
    </li>
  <% end %>
  <li class="nav-item" role="presentation">
    <%= link_to 'javascript:void(0);', class: 'd-none d-sm-inline-block btn btn-success shadow', 'data-toggle': "modal", 'data-target': "#ModalCenter", onclick: "addDesa();" do %>
      <i class="fas fa-plus-circle fa-sm text-white-50"></i> ADD
    <% end %>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <% @desas.each_with_index do |desa, index| %>
    <div class="tab-pane fade show <%= index.zero? ? 'active' : '' %>" id="pills-<%= desa.slug %>" role="tabpanel" aria-labelledby="pills-<%= desa.slug %>-tab"><%= desa.name %></div>
  <% end %>
</div>

<!-- Modal Form Desa -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div id="modal-form-desa" class="modal-content">
      <%= render 'modal_form_desa', desa: @desa %>
    </div>
  </div>
</div>
<!-- End Modal -->