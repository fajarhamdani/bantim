<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-gray-800">Daftar Kelompok</h6>
          <%= link_to 'javascript:void(0);', class: 'd-none d-sm-inline-block btn btn-sm btn-primary shadow-sm', 'data-toggle': "modal", 'data-target': "#ModalCenter", onclick: "addKelompok();" do %>
            <i class="fas fa-plus-circle fa-sm text-white-50"></i> Tambah Kelompok
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Nama</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% kelompoks.each do |kelompok| %>
                <tr>
                  <td><%= kelompok.name %></td>
                  <td>
                    <%= link_to kelompok, class: 'btn btn-info btn-circle btn-sm', data: { reload: true } do %>
                      <i class="fas fa-eye" title="view"></i>
                    <% end %>
                    <%= link_to 'javascript:void(0);', class: 'btn btn-success btn-circle btn-sm', 'data-toggle': "modal", 'data-target': "#ModalCenter", onclick: "editKelompok('#{kelompok.slug}');" do %>
                      <i class="fas fa-edit" title="edit"></i>
                    <% end %>
                    <%= link_to kelompok, method: :delete, data: { confirm: "Apakah anda yakin akan menghapus kelompok #{kelompok.name} ?" }, class: 'btn btn-danger btn-circle btn-sm' do %>
                      <i class="fas fa-trash" title="delete"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Form Kelompok -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div id="modal-form-kelompok" class="modal-content">
      <%= render 'modal_form', desa: desa, kelompok: kelompok %>
    </div>
  </div>
</div>
<!-- End Modal -->