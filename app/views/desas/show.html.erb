<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Desa <%= @desa.name.capitalize %></h1>
</div>

<!-- Content Row -->
<div class="row">
  <!-- Area Chart -->
  <div class="col-xl-12 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Kelompok</h6>
          <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#exampleModalCenter">
            <i class="fas fa-plus fa-sm text-white-50"></i> Tambah Kelompok
          </a>
        </div>
      </div>
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 flex-row align-items-center justify-content-between">
        <div class="dropdown no-arrow">
          <div class="row">
            <% @kelompoks.each do |kelompok| %>
              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1"><%= link_to kelompok.name, kelompok_url(kelompok) %></div>
                        <div class="h7 mb-0 font-weight-bold text-gray-800"><%= kelompok.people.size %> Jiwa</div>
                        <%= link_to 'Hapus', kelompok_url(kelompok), method: :delete, remote: true %>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-database fa-2x text-gray-300"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

