<div class="row">
  <div class="col-xl-6 col-lg-7">
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pembina</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-pie pt-4">
          <canvas id="DonutChartPembina"></canvas>
        </div>
        <div class="mt-4 text-center font-weight-bold">
          <span class="mr-2">
            <i class="fas fa-circle text-male"></i><%= " Laki-Laki : #{number_with_precision(@male_pembinas.size, :precision => 0, :delimiter => ',')}" %>
          </span>
          <span class="mr-2">
            <i class="fas fa-circle text-female"></i><%= " Wanita : #{number_with_precision(@female_pembinas.size, :precision => 0, :delimiter => ',')}" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-6 col-lg-7">
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lansia</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-pie pt-4">
          <canvas id="DonutChartLansia"></canvas>
        </div>
        <div class="mt-4 text-center font-weight-bold">
          <span class="mr-2">
            <i class="fas fa-circle text-male"></i><%= " Laki-Laki : #{number_with_precision(@male_lansias.size, :precision => 0, :delimiter => ',')}" %>
          </span>
          <span class="mr-2">
            <i class="fas fa-circle text-female"></i><%= " Wanita : #{number_with_precision(@female_lansias.size, :precision => 0, :delimiter => ',')}" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>