<%= form_with(model: desa) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Tambah Desa</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <% if desa.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(desa.errors.count, "error") %> prohibited this desa from being saved:</h2>

        <ul>
        <% desa.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, required: true, class: 'form-control', placeholder: 'Nama Desa' %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= form.submit 'Simpan', class: 'btn btn-primary' %>
  </div>
<% end %>