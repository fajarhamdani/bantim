<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-gray-800">
        <div class="d-sm-flex align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Desa <%= @kelompok.desa_name.capitalize %></h6>
          <h6 class="m-0 font-weight-bold text-primary">Kelompok <%= @kelompok.name.capitalize %></h6>
          <h6 class="m-0 font-weight-bold text-primary">Total: <%= @kelompok.people.size %> Jiwa</h6>
        </div>
      </h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Nama Lengkap</th>
              <th>Nama Panggilan</th>
              <th>Tempat Lahir</th>
              <th>Tgl. Lahir</th>
              <th>Gol. Darah</th>
              <th>Status</th>
              <th>JK</th>
              <th>No. Telp</th>
              <th>Pend. Terakhir</th>
              <th>Keahlian</th>
              <th>Alamat</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>No</th>
              <th>Nama Lengkap</th>
              <th>Nama Panggilan</th>
              <th>Tempat Lahir</th>
              <th>Tgl. Lahir</th>
              <th>Gol. Darah</th>
              <th>Status</th>
              <th>JK</th>
              <th>No. Telp</th>
              <th>Pend. Terakhir</th>
              <th>Keahlian</th>
              <th>Alamat</th>
            </tr>
          </tfoot>
          <tbody>
            <% @people.each_with_index do |person, index| %>
              <tr>
                <td><%= index.succ %></td>
                <td><%= person.fullname %></td>
                <td><%= person.nickname %></td>
                <td><%= person.place_of_birth %></td>
                <td><%= person.date_of_birth %></td>
                <td><%= person.blood_type %></td>
                <td><%= person.status %></td>
                <td><%= person.sex %></td>
                <td><%= person.phone_number %></td>
                <td><%= person.education %></td>
                <td><%= person.expertise %></td>
                <td><%= person.address %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<%= render 'kelompok_script' %>